@{
}
@model List<Nimap_Infotech_Project.Models.Category>

<a href="@Url.Action("Create","Category")" class="btn btn-primary">Add a New Category</a>
<h2>List of All Category</h2>
<table class="table table-bordered table-striped table-hover">
    <tr>
        <th>Category Id</th>
        <th>Category Name</th>
        <th>Operations</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.CategoryId</td>
            <td>@item.CategoryName</td>
            <td>
                @*@Html.ActionLink("Edit","Edit","Category",new {@id=item.CategoryId})
                @Html.ActionLink("Delete","Delete","Category",new {@id=item.CategoryId})*@
                <a href="@Url.Action("Edit","Category",new {@id=item.CategoryId})" class="btn btn-warning">Edit</a>
                <a href="@Url.Action("Delete","Category",new {@id=item.CategoryId})" class="btn btn-danger">Delete</a>
            </td>
        </tr>

    }

</table>