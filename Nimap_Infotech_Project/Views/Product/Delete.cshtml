@{
}
@model Nimap_Infotech_Project.Models.Product

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Product</h1>
@using (Html.BeginForm("Delete", "Product", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table class="table">
        <tr>
            <td>Product Id</td>
            <td>@Model.ProductId</td>
        </tr>
        <tr>
            <td>Product Name</td>
            <td>@Model.ProductName</td>
        </tr>
        <tr>
            <td colspan="2">
                <input type="submit" value="Delete Category" class="btn-primary btn-success text-center" />

            </td>
        </tr>

    </table>
}
